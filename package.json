{
  "name": "mikeking.io",
  "version": "2.0.0",
  "description": "Personal website",
  "author": "Mike King",
  "private": true,
  "config": {
    "js_dir": "./source/js/**",
    "lr_options": "-w 600 -e 'html,yaml,md,css,js'",
    "lr_watch_dir": "./content, ./static, ./views",
    "grow_sdk_url": "https://install.growsdk.org"
  },
  "scripts": {
    "setup": "curl $npm_package_config_grow_sdk_url | bash && npm i",
    "start": "NODE_ENV=development ~/bin/grow run --port=3000 & npm run serve",
    "preserve": "npm run lint",
    "serve": "npm run livereload & webpack --watch --progress",
    "clean": "rm -rf node_modules package-lock.json",
    "postclean": "echo \"$(tput setaf 148)Complete!$(tput sgr0)\"",
    "lint": "eslint \"$npm_package_config_js_dir\"",
    "livereload": "livereload \"$npm_package_config_lr_watch_dir\" $npm_package_config_lr_options",
    "prebuild": "npm run lint",
    "build": "NODE_ENV=production webpack --progress && ~/bin/grow build",
    "postbuild": "echo \"$(tput setaf 148)Complete!$(tput sgr0)\"",
    "backup": "git add . && git commit -m \"$msg\" && git push",
    "backup:auto": "msg='Saving progress...' npm run backup",
    "deploy": "~/bin/grow deploy",
    "postversion": "git push --tags"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "css-loader": "^0.28.4",
    "eslint": "^4.3.0",
    "extract-loader": "^1.0.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "livereload": "^0.6.2",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "progress-bar-webpack-plugin": "^1.10.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^3.4.1"
  },
  "dependencies": {
    "vue": "^2.4.2",
    "vue-router": "^2.7.0"
  },
  "engines": {
    "node": "7.10.0",
    "npm": "4.2.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "parser": "babel-eslint",
    "rules": {
      "strict": 0,
      "quotes": [
        2,
        "single"
      ],
      "no-unused-vars": 1,
      "no-console": 0
    },
    "globals": {}
  }
}
